<div>
  <div class="icon">
    <%= tweet_icon(item) %>
  </div>
</div>
<div class="tweet-body">
  <div class="content">
    <%= tweet_text(item) %>
  </div>
  <div class="when">
    Posted by <%= tweet_author(item) %> <a class="tweet-url" rel="nofollow" href="http://twitter.com/<%= item.from_user %>/status/<%= item.tweet_id %>"><%= time_ago_in_words(item.created_at) %> ago</a>
  </div>
</div>